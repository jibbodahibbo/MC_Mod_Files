package com.digitaleducationadventures.digimod.blocks;

import net.minecraft.block.Block;
import net.minecraft.block.material.Material;

public class DigiBlockProperties extends Block{

	protected DigiBlockProperties(Material materialIn) {
		super(materialIn);
		
		this.setBlockUnbreakable();  //makes the block unbreakable
		this.setResistance(2000.0F); //resistance to explosions
		this.setLightLevel(1.0F); //light emision, takes a number from 0.0F-1.0F
		this.setLightOpacity(0); //ability to stop light, takes 0-16
		this.setStepSound(this.soundTypeMetal); //makes the stepping sound metal.
		this.setHardness(0.1F); //makes hardness, 0.0F-1.0F, how easy to break with picaxe
		this.setHarvestLevel("picaxe",1); //harvest level for gathering with a certain picaxe. 4 is diamond, 1 is wood.
		this.setLightLevel(1.0F);// light emitted , 0.0F-1.0F.
		
		
	}

}
