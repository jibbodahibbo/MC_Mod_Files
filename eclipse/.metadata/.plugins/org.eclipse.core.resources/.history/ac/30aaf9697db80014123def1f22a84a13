package com.digitaleducationadventures.digimod.item;

import net.minecraft.entity.Entity;
import net.minecraft.item.ItemArmor;
import net.minecraft.item.ItemStack;

public class ItemDigiArmorMaterial extends ItemArmor{

	public ItemDigiArmorMaterial(ArmorMaterial material, int renderIndex,
			int armorType) {
		super(material, renderIndex, armorType);
		// TODO Auto-generated constructor stub
	}

	@Override
	public String getArmorTexture(ItemStack stack, Entity entity, int slot, String type)
	{
		
		if(this.armorType ==2)
	{
		
			return "dm:textures/models/armor/armorfile_2.png";
	}
		return "dm:textures/models/armor/armorfile_1.png";
		
	
		
}
	
	
	
	
}
